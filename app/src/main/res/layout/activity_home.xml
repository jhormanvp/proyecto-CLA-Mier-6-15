<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Home">

    <TextView
        android:id="@+id/img_inicio"
        android:layout_width="210dp"
        android:layout_height="85dp"
        android:layout_marginTop="188dp"
        android:layout_marginBottom="222dp"
        android:text="Home"
        android:textColor="@color/white"
        android:textSize="70sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/btn_ir_inicio_sesion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_ir_inicio_sesion"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="35dp"
        android:backgroundTint="#404040"
        android:text="Iniciar Sesion"
        app:layout_constraintBottom_toTopOf="@+id/btn_ir_registro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_inicio" />

    <Button
        android:id="@+id/btn_ir_registro"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="#404040"
        android:text="Registro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_ir_inicio_sesion" />

</androidx.constraintlayout.widget.ConstraintLayout>